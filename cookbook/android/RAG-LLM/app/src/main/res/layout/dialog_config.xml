<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_topk_bottom"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generation Settings"
            android:textAllCaps="false"
            android:textColor="@color/font_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/icon_close" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Chunk Size"
        android:textColor="#676767" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/acs_chunk_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="512"
            android:min="16" />

        <EditText
            android:id="@+id/et_chunk_size"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_rounded_border_gray"
            android:gravity="center"
            android:inputType="number"
            android:paddingVertical="3dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/font_black"
            android:textSize="14sp"
            tools:text="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nChunk"
            android:textColor="#676767" />

        <EditText
            android:id="@+id/et_n_chunk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_rounded_border_gray"
            android:gravity="center"
            android:inputType="number"
            android:paddingVertical="3dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/font_black"
            android:textSize="14sp"
            tools:text="5" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_config_changed_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/icon_alert_yellow"
        android:drawablePadding="5dp"
        android:gravity="top"
        android:text="Changing Settings requires re-processing all uploaded files."
        android:textColor="#91471B"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            style="@style/btn_enable_14"
            android:background="@drawable/btn_rounded_border_18"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="Reset" />

        <Button
            android:id="@+id/btn_re_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img_config"
            android:enabled="false"
            android:minWidth="1dp"
            android:minHeight="1dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:textAllCaps="false"
            android:textColor="@color/font_white" />
    </LinearLayout>

</LinearLayout>